{
  "name": "@kepi/auth-service",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "dist/apps/auth-service",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "main": "apps/auth-service/src/main.ts",
          "tsConfig": "apps/auth-service/tsconfig.app.json",
          "assets": [
            {
              "input": "apps/auth-service/src",
              "glob": "swagger-output.json",
              "output": "."
            },
            {
              "input": "apps/auth-service/src/utils",
              "glob": "email-templates/**/*",
              "output": "./utils"
            }
          ],
          "external": [
            "express",
            "swagger-ui-express",
            "nodemailer",
            "redis",
            "@prisma/client",
            ".prisma/client",
            "dotenv",
            "ejs"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false
            }
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@kepi/auth-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@kepi/auth-service:build:development"
          },
          "production": {
            "buildTarget": "@kepi/auth-service:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "swagger-ui-express": "^5.0.1"
  }
}
