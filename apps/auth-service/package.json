{
  "name": "@kepi/auth-service",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "swagger-generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node apps/auth-service/src/swagger.js",
          "cwd": "{workspaceRoot}"
        }
      },
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "dist/apps/auth-service",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "main": "apps/auth-service/src/main.ts",
          "tsConfig": "apps/auth-service/tsconfig.app.json",
          "assets": [
            {
              "input": "apps/auth-service/src",
              "glob": "swagger-output.json",
              "output": "."
            },
            {
              "input": "apps/auth-service/src/utils",
              "glob": "email-templates/**/*",
              "output": "./utils"
            }
          ],
          "external": [
            "express",
            "swagger-ui-express",
            "nodemailer",
            "redis",
            "@prisma/client",
            "dotenv",
            "ejs",
            "cookie-parser",
            "cors",
            "bcryptjs"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false
            }
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@kepi/auth-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@kepi/auth-service:build:development"
          },
          "production": {
            "buildTarget": "@kepi/auth-service:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.21.2",
    "swagger-ui-express": "^5.0.1",
    "cookie-parser": "^4.0.0",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3"
  }
}